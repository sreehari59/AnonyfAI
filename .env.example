# =============================================================================
# AI ASSISTANT CONFIGURATION
# =============================================================================
# Claude API Configuration (for AI-powered PII detection and recommendations)
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_claude_api_key_here

# AI Assistant Settings
AI_MODEL_NAME=claude-3-sonnet-20240229
AI_MAX_TOKENS=4000
AI_TEMPERATURE=0.1

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Primary Database Connection Mode
# Options: "real", "demo", "vscode"
CONNECTION_MODE=demo

# Real Database Settings (when CONNECTION_MODE=real)
DB_SERVER=sql-lakeside-server.database.windows.net
DB_USERNAME=hackathon_epsilon
DB_PASSWORD=your_database_password_here
DB_PORT=1433
DB_DRIVER=ODBC Driver 18 for SQL Server

# Default Database
DEFAULT_DATABASE=AdventureWorks2019

# Connection Pool Settings
MAX_POOL_SIZE=10
CONNECTION_TIMEOUT=30
COMMAND_TIMEOUT=60

# =============================================================================
# ENCRYPTION CONFIGURATION
# =============================================================================
# Master encryption key file location
MASTER_KEY_FILE=master.key

# Encryption settings
ENCRYPTION_ALGORITHM=Fernet
KEY_DERIVATION_ITERATIONS=100000
SALT_LENGTH=32

# =============================================================================
# SCANNING CONFIGURATION
# =============================================================================
# Default scanning parameters
DEFAULT_SAMPLE_SIZE=100
MAX_ROWS_TO_SCAN=10000
CONFIDENCE_THRESHOLD=0.7
MAX_CONCURRENT_SCANS=5

# Performance settings
CHUNK_SIZE=1000
BATCH_SIZE=500

# =============================================================================
# RESULTS DATABASE CONFIGURATION
# =============================================================================
# SQLite database for storing PII detection results
RESULTS_DB_PATH=pii_results.db
RESULTS_DB_BACKUP_PATH=backups/pii_results_backup.db

# Auto-backup settings
AUTO_BACKUP=true
BACKUP_RETENTION_DAYS=30

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
LOG_FILE=logs/pii_detection.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# =============================================================================
# STREAMLIT CONFIGURATION
# =============================================================================
# Streamlit app settings
STREAMLIT_HOST=localhost
STREAMLIT_PORT=8501
STREAMLIT_THEME=light

# Page configuration
PAGE_TITLE=PII Detection System
PAGE_ICON=üîç
LAYOUT=wide

# =============================================================================
# COMPLIANCE CONFIGURATION
# =============================================================================
# Regulatory compliance settings
ENABLE_GDPR_COMPLIANCE=true
ENABLE_CCPA_COMPLIANCE=true
ENABLE_HIPAA_COMPLIANCE=true

# Data retention settings (days)
DATA_RETENTION_PERIOD=90
LOG_RETENTION_PERIOD=365
AUDIT_RETENTION_PERIOD=2555  # 7 years

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================
# Email notifications (optional)
ENABLE_EMAIL_NOTIFICATIONS=false
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_email_password_here
NOTIFICATION_RECIPIENTS=admin@yourcompany.com,security@yourcompany.com

# Webhook notifications (optional)
ENABLE_WEBHOOK_NOTIFICATIONS=false
WEBHOOK_URL=https://your-webhook-endpoint.com/pii-alerts

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Security settings
ENABLE_DATA_MASKING=true
ENABLE_ENCRYPTION=true
REQUIRE_AUTHENTICATION=false

# Session security
SESSION_TIMEOUT=3600  # seconds
MAX_LOGIN_ATTEMPTS=5

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Development and debugging settings
DEBUG_MODE=false
ENABLE_PROFILING=false
CACHE_RESULTS=true
MOCK_AI_RESPONSES=false

# Testing settings
TEST_DATABASE=test_pii_db.db
ENABLE_TEST_DATA=true
GENERATE_SAMPLE_DATA=false

# =============================================================================
# EXPORT CONFIGURATION
# =============================================================================
# Default export settings
DEFAULT_EXPORT_FORMAT=csv
EXPORT_DIRECTORY=exports/
MAX_EXPORT_ROWS=100000

# Report settings
ENABLE_PDF_REPORTS=true
REPORT_TEMPLATE=default
COMPANY_LOGO_PATH=assets/company_logo.png

# =============================================================================
# API CONFIGURATION
# =============================================================================
# API settings for external integrations
API_RATE_LIMIT=100  # requests per minute
API_TIMEOUT=30  # seconds
ENABLE_API_LOGGING=true

# External service URLs
COMPLIANCE_CHECK_URL=https://api.compliance-service.com/check
DATA_CLASSIFICATION_URL=https://api.data-classifier.com/classify

# =============================================================================
# BACKUP AND RECOVERY
# =============================================================================
# Backup configuration
ENABLE_AUTO_BACKUP=true
BACKUP_SCHEDULE=daily
BACKUP_LOCATION=backups/
BACKUP_COMPRESSION=true

# Recovery settings
ENABLE_DISASTER_RECOVERY=true
RECOVERY_POINT_OBJECTIVE=1  # hours
RECOVERY_TIME_OBJECTIVE=4   # hours

# =============================================================================
# MONITORING AND ALERTS
# =============================================================================
# System monitoring
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=300  # seconds
ENABLE_PERFORMANCE_MONITORING=true

# Alert thresholds
HIGH_PII_COUNT_THRESHOLD=1000
SCAN_DURATION_ALERT_THRESHOLD=3600  # seconds
ERROR_RATE_THRESHOLD=0.05  # 5%

